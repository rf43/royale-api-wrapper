<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_full"
    android:paddingBottom="@dimen/margin_full">

    <View
        android:id="@+id/top_box"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_full"
        android:background="@color/topPlayer_skeleton_boxes"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/middle_box"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_marginTop="@dimen/margin_half"
        android:background="@color/topPlayer_skeleton_boxes"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/top_box"
        app:layout_constraintTop_toBottomOf="@id/top_box" />

    <View
        android:id="@+id/bottom_box"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/margin_quarter"
        android:layout_marginBottom="@dimen/margin_three_quarter"
        android:background="@color/topPlayer_skeleton_boxes"
        app:layout_constraintBottom_toTopOf="@id/temp_divider"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/middle_box"
        app:layout_constraintTop_toBottomOf="@id/middle_box" />

    <View
        android:id="@+id/right_top_box_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/margin_full"
        android:background="@color/topPlayer_skeleton_boxes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/right_top_box_two"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/margin_quarter"
        android:background="@color/topPlayer_skeleton_boxes"
        app:layout_constraintEnd_toEndOf="@id/right_top_box_one"
        app:layout_constraintTop_toBottomOf="@id/right_top_box_one" />

    <View
        android:id="@+id/temp_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_full"
        android:layout_marginEnd="@dimen/margin_full"
        android:background="@color/darkSteelBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>